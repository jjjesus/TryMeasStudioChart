<Window x:Class="TryMeasStudioChart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ni="http://schemas.ni.com/controls/2009/xaml/presentation"
        Title="MainWindow" Height="480" Width="640" >
    <Grid>
        <ni:Graph
            Name="mygraph"
            RenderMode="Raster"
            DataSource="{Binding ChartData}"
            HorizontalAlignment="Left"
            Height="200" Margin="181,114,0,0"
            VerticalAlignment="Top"
            Width="300">
            <ni:Graph.Axes>
                <ni:AxisDouble Adjuster="ContinuousChart"
                               Orientation="Horizontal"
                               Range="0,100"/>
            </ni:Graph.Axes>
            <ni:Graph.Plots>
                <ni:Plot
                    Name="MyPlot1"
                    Label="MyPlot1"
                    >
                    <ni:LinePlotRenderer Stroke="Blue"/>
                </ni:Plot>
                <ni:Plot
                    Name="MyPlot2"
                    Label="MyPlot2"
                    >
                    <ni:LinePlotRenderer Stroke="Purple"/>
                </ni:Plot>
            </ni:Graph.Plots>
        </ni:Graph>
    </Grid>
</Window>
